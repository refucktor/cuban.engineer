.horizontal-divider
    display table
    white-space nowrap
    height auto
    overflow hidden
    line-height 1
    text-align center
    margin 1rem 0
    font-weight 700
    text-transform uppercase
    letter-spacing .05em
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    -webkit-tap-highlight-color transparent
    font-size 1rem
    &:before
        background-position right 1em top 50%
    &:after
        background-position left 1em top 50%
    &:before
    &:after
        content ''
        display table-cell
        position relative
        top 50%
        width 50%
        background-repeat no-repeat
        background-image url("data:image/png;base64,")

